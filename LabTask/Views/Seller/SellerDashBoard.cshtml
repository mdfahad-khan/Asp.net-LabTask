@model List<LabTask.EF.Product>
@{
    ViewBag.Title = "SellerDashBoard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Seller Dashboard</title>
</head>
<body>

    <div class="container mt-4">
        <h2 class="mb-4">Seller Dashboard</h2>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>PRICE</th>
                            <th>QUANTITY</th>
                            <th>CATEGORY</th>
                            <th>EDIT</th>
                            <th>DELETE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Name</td>
                                <td>@product.Price</td>
                                <td>@product.Quantity</td>
                                <td>
                                    @foreach (var category in ViewBag.Catagory)
                                    {
                                        if (category.Id == product.C_Id)
                                        { 
                                            @category.Name
                                        }
                                    }
                                </td>
                                <td><a class="btn btn-outline-success btn-sm" href="/Seller/SellerEditProduct/@product.Id">Edit</a></td>
                                <td><a class="btn btn-outline-danger btn-sm" href="/Seller/deleteProduct/@product.Id">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                No data available.
            </div>
        }

        <a class="btn btn-primary" href="/Seller/SellerAddProduct">Add Product</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
